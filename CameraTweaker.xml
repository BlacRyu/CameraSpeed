<?xml-stylesheet type="text/xsl" href="/css/wowui.xsl"?>
<UI xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Script file="CameraSpeed.lua" />

	<!-- Slider Template -->
	<Frame name="CamSp_SliderTemplate" virtual="true">
		<Slider name="$parent_Slider" orientation="HORIZONTAL" enableMouse="true">
			<Size> <RelDimension x=".7" y="1" /> </Size>
			<Anchors> <Anchor point="LEFT" /> </Anchors>

			<HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
			<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background"
				edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
				<EdgeSize val="8"/>
				<TileSize val="8"/>
				<BackgroundInsets left="3" right="3" top="6" bottom="6"/>
			</Backdrop>
			<ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
				<Size x="32" y="32"/>
			</ThumbTexture>
			<OnValueChanged>
				if userInput then
					-- We should probably do this all in lua
				end
			</OnValueChanged>
		</Slider>

		<!-- Edit Box Template -->
		<EditBox name="$parent_EditBox" font="GameFontNormal" enableMouse="true" 
		         enableKeyboard="true" letters="3" numeric="true" autoFocus="false">
			<Size> <RelDimension x=".25" y="1" /> </Size>
			<Anchors> <Anchor point="RIGHT" /> </Anchors>

			<FontString inherits="GameFontNormal" justifyH="RIGHT">
				<Color r="0.8" g="1.0" b="1.0"/>
			</FontString>
			<TextInsets>
				<AbsInset left="5" right="5" bottom="5" top="5" />
			</TextInsets>
			<Scripts>
				<OnEscapePressed>
					this:ClearFocus()
				</OnEscapePressed>
				<OnEnterPressed>
					this:ClearFocus()
				</OnEnterPressed>
			</Scripts>
		</EditBox>
	</Frame>


	<!-- Options Panel -->
	<Frame name="CameraSpeedOptionsPanel" parent="UIParent" hidden="true" movable="true" 
	       resizable="false" enableMouse="true" toplevel="true">
		<Size> <AbsDimension x="300" y="150" /> </Size>
		<Anchors> <Anchor point="CENTER" /> </Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
			edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
			 <AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
	    <Layers>
			<Layer level="ARTWORK">
				<Texture name="CameraSpeedOptionsFrameHeader"
					file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="320" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString inherits="GameFontNormal" name="CameraSpeedOptionsFrameTitle"
				            text="Camera Speed Options">
					<Anchors>
						<Anchor point="TOP" relativeTo="CameraSpeedOptionsFrameHeader">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<FontString inherits="GameFontNormal" name="CameraSpeedOptionsYawSliderLabel"
				            text="Camera Horizontal Speed">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="25" y="-45"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString inherits="GameFontNormal" name="CameraSpeedOptionsYawSliderLabel"
				            text="Camera Vertical Speed">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="25" y="-95"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
	    </Layers>

		<Frames>
			<button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-4" y="-4" />
						</Offset>
					</Anchor>
				</Anchors>
			</button>
			<Slider name="$parentYawSlider" inherits="CameraSpeedSlider_Template" minValue="5" 
			        maxValue="250" defaultValue="180" valueStep="5" stepsPerPage="2">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-60"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Slider>
			<EditBox name="$parentYawEditBox" inherits="CameraSpeedEditBox_Template">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="230" y="-50"/>
						</Offset>
					</Anchor>
				</Anchors>
			</EditBox>
			<Slider name="$parentPitchSlider" inherits="CameraSpeedSlider_Template" minValue="5"
			        maxValue="250" defaultValue="90" valueStep="5" stepsPerPage="2">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-110"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Slider>
			<EditBox name="$parentPitchEditBox" inherits="CameraSpeedEditBox_Template">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="230" y="-100"/>
						</Offset>
					</Anchor>
				</Anchors>
			</EditBox>
		</Frames>
	</Frame>
</UI>